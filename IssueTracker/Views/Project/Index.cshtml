@model ICollection<IssueTracker.Models.Project>
@{
    ViewBag.Title = "Projects";
}
<head></head>


<h2 style="text-align:center;margin-top:25px">Projects</h2>
<hr />
<div class="col-12 border p-4">

    @if (Model.Any())
    {
        <table id="dtProjects" class="table table-hover table-striped" width="100%">
            <thead class="table-dark pg-blue-grey">
                <tr>
                    <th>@Html.DisplayNameFor(p => p.First().name)</th>
                    <th>@Html.DisplayNameFor(p => p.First().description)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>

                        <th>@Html.ActionLink(project.name, "Details", new { id = project.id }, new { @class = "page-link" })</th>
                        <th>@project.description</th>
                        @*<th>@project.createdDate.ToShortDateString()</th>
                            <th>@project.updatedDate.ToString()</th>**@

                        <th>
                            <a class="btn btn-sm btn-success" asp-action="Edit" asp-controller="Project" asp-route-id="@project.id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Project" asp-route-id="@project.id"
                               onclick="return confirm('Are you sure you want to delete the project')">Delete</a>
                            <a class="btn btn-sm btn-grey text-white" asp-action="" asp-controller="" asp-route-id="@project.id">Add Ticket</a>

                        </th>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4 style="text-align:center;margin-top:25px">No Projects to display</h4>
    }

</div>
<br />
<hr />
<a class="btn  btn-blue text-white text-wrap" asp-action="Create" asp-controller="Project">
    Create New Project
</a>
<a class="btn  btn-blue text-white text-wrap float-lg-right" asp-action="Index" asp-controller="Home">
    Back to Home
</a>




