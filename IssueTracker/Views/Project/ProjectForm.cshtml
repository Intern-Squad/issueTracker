@model IssueTracker.Models.Project


@{
    ViewBag.Title = ViewBag.Message;
}

<div style="margin-bottom:25px;"></div>
<h1 style="text-align:center">@ViewBag.Message Project</h1>

<div class="row justify-content-center">
    <div class="col-4">
        <form method="post">
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name"></label>
                <input asp-for="name" class="form-control" autofocus/>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description"></label>
                <textarea asp-for="description" type="text" rows="5" cols="30" class="form-control"></textarea>
                @*<span asp-validation-for="name" class="text-danger"></span>*@
            </div>


            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn  btn-outline-primary text-white text-wrap">Save</button>
            <a class="btn  btn-outline-primary text-white text-wrap float-lg-right" asp-action="Index" asp-controller="project">
                Back
            </a>
        </form>
    </div>
</div>