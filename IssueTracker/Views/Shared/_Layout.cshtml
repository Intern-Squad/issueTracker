
@inject SignInManager<ApplicationUser> signInManager;




<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Issue Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/mdbootstrap/css/mdb.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">Issue Tracker</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                Home
                                @*<span class="sr-only">(current)</span>*@
                            </a>
                           
                        </li>
                      
                        <li class="nav-item ">
                            @if (signInManager.IsSignedIn(User))
                            {<a class="nav-link  text-white" asp-controller="Project" asp-action="Index">
                                    Projects
                                    @*<span class="sr-only">(current)</span>*@
                                </a>
                            }
                        </li>

                    </ul>
                    <ul class="navbar-nav ">
                        @if (signInManager.IsSignedIn(User))
                        {

                            <li class="nav-item ">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn nav-link   bg-transparent   text-white" >
                                        Logout
                                    </button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link  text-white" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/mdbootstrap/js/mdb.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
